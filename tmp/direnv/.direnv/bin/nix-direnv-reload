#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv/.envrc" "/Users/naitokosuke/src/github.com/naitokosuke/dotfiles/tmp/direnv/.direnv"/*.rc
